<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:longClickable="false"

    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginTop="40dp"
        android:src="@drawable/sniper"
        android:contentDescription="@string/sniper"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="showToast"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myTextView"
        android:id="@+id/myTextView"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myButton1"
        android:id="@+id/myButton1"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/myTextView"
        android:layout_toLeftOf="@+id/myTextView"
        android:layout_toStartOf="@+id/myTextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myButton2"
        android:id="@+id/myButton2"
        android:layout_alignBottom="@+id/myButton1"
        android:layout_toRightOf="@+id/myTextView"
        android:layout_toEndOf="@+id/myTextView" />


</RelativeLayout>
